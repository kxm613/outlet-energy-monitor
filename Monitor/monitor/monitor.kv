#:kivy 1.9
#:include monitor/colors.kv

BoxLayout:
  canvas.before:
    Color:
      rgba: bg_white
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: 'vertical'
  BoxLayout:
    orientation: 'vertical'
    padding: 5
    size_hint_y: 0.47
    Label:
      font_size: 20
      center_x: root.width / 2
      text: app.time_text
      color: navy
    Label:
      font_size: 62
      center_x: root.width / 2
      center_y: root.height / 2
      halign: 'center'
      text: f'{app.wattage} W'
      color: black
    Label:
      font_size: 37
      center_x: root.width / 2
      markup: True
      text: app.diff_text
      color: navy
  GridLayout:
    cols: 2
    row_force_default: True
    col_default_width: (self.width - 28) / 2
    row_default_height: (self.height - 28) / 2
    orientation: 'lr-tb'
    padding: 10
    spacing: 8
    size_hint_y: 0.53
    canvas:
      Color:
        rgba: bg_blue
      Rectangle:
        pos: self.pos
        size: self.size
    Button:
      text: 'Device 1'
    Button:
      text: 'Device 2'


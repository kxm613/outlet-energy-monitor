#:kivy 1.9
#:include monitor/colors.kv
#:include monitor/components/outlet_grid.kv

BoxLayout:
  canvas.before:
    Color:
      rgba: bg_white
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: 'vertical'
  BoxLayout:
    orientation: 'vertical'
    padding: 5
    size_hint_y: 0.47
    Label:
      font_size: 20
      center_x: root.width / 2
      text: app.time_text
      color: navy
    Label:
      font_size: 62
      center_x: root.width / 2
      text: f'{app.wattage} W'
      color: black
    Label:
      font_size: 34
      center_x: root.width / 2
      markup: True
      text: app.diff_text
      color: navy
  OutletGrid:
    size_hint_y: 0.53
    id: outlet_buttons
    outlets: app.outlets
    callback: app.press_callback


